{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-undef" : 2,
    "react/react-in-jsx-scope": 2,
  },
  "plugins": [
    "react", "jest"
  ]
}